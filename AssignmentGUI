    private void WITHDRAWALActionPerformed(java.awt.event.ActionEvent evt) {                                           
        
        if(ACC_NUM.equals(A1.getAccount_number()))
        {
            String input = JOptionPane.showInputDialog("enter your witdrawal amount");
            
            if((input.length()>0 && input.length()<6))
            {
                A1.Withdraw(Integer.valueOf(input));
                JOptionPane.showMessageDialog(this, "Withdrawal successful new balance : " + A1.getBalance()+"$");
            }
            else
            {
                JOptionPane.showMessageDialog(this, "please enter a valid option");
            }
        }
        
        else if(ACC_NUM.equals(A2.getAccount_number()))
        {
            String input = JOptionPane.showInputDialog("enter your witdrawal amount");
            
            if((input.length()>0 && input.length()<6))
            {
                A2.Withdraw(Integer.valueOf(input));
                JOptionPane.showMessageDialog(this, "Withdrawal successful new balance : " + A2.getBalance()+"$");
            }
            else
            {
                JOptionPane.showMessageDialog(this, "please enter a valid option");
            }
        }
        
        else if(ACC_NUM.equals(A3.getAccount_number()))
        {
            String input = JOptionPane.showInputDialog("enter your witdrawal amount");
            
            if((input.length()>0 && input.length()<6))
            {
                A3.Withdraw(Integer.valueOf(input));
                JOptionPane.showMessageDialog(this, "Withdrawal successful new balance : " + A3.getBalance()+"$");
            }
            else
            {
                JOptionPane.showMessageDialog(this, "please enter a valid option");
            }
        }
        
        else if(ACC_NUM.equals(A4.getAccount_number()))
        {
            String input = JOptionPane.showInputDialog("enter your witdrawal amount");
            
            if((input.length()>0 && input.length()<6))
            {
                A4.Withdraw(Integer.valueOf(input));
                JOptionPane.showMessageDialog(this, "Withdrawal successful new balance : " + A4.getBalance()+"$");
            }
            else
            {
                JOptionPane.showMessageDialog(this, "please enter a valid option");
            }
        } 
        
    }                                          

    private void ACCOUNTBALANCEActionPerformed(java.awt.event.ActionEvent evt) {                                               
        if(ACC_NUM.equals(A1.getAccount_number()))
        {
            JOptionPane.showMessageDialog(this, A1.getBalance()+"$");
        }
        
        else if(ACC_NUM.equals(A2.getAccount_number()))
        {
            JOptionPane.showMessageDialog(this, A2.getBalance()+"$");
        }
         
        else if(ACC_NUM.equals(A3.getAccount_number()))
        {
            JOptionPane.showMessageDialog(this, A3.getBalance()+"$");
        }
         
        else if(ACC_NUM.equals(A4.getAccount_number()))
        {
            JOptionPane.showMessageDialog(this, A4.getBalance()+"$");
        }
    }                                              

    private void DEPOSITActionPerformed(java.awt.event.ActionEvent evt) {                                        
        String input = JOptionPane.showInputDialog("enter your deposit amount");
        
        if(ACC_NUM.equals(A1.getAccount_number()))
        {
            if((input.length()>0 && input.length()<6))
            {
                A1.deposit(Integer.valueOf(input));
                JOptionPane.showMessageDialog(this, "deposit successful new balance : " + A1.getBalance()+"$");
            }
