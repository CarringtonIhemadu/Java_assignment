    private void CHANGEPINActionPerformed(java.awt.event.ActionEvent evt) {                                          
        String input = JOptionPane.showInputDialog("enter your current passcode");
       
        if(ACC_NUM.equals(A1.getAccount_number()))
        {
            if((input.length()>0 && input.length()<6))
            {
                if(input.equals(A1.getPass_code()))
                {
                    String new_pass = JOptionPane.showInputDialog("enter your new passcode");
                    
                    if((new_pass.length()>0 && new_pass.length()<6))
                    {
                        String new_pass2 = JOptionPane.showInputDialog("enter your new passcode again");
                        
                        if((new_pass2.length()>0 && new_pass2.length()<6 && new_pass2.equals(new_pass)))
                        {
                            A1.setPass_code(new_pass2);
                            JOptionPane.showMessageDialog(this, "your passcode was changed successfully");
                        }
                        else
                        {
                            JOptionPane.showMessageDialog(this, "your two pass words do not match");
                        }
                        
                    }
                    else
                    {
                        JOptionPane.showMessageDialog(this, "your new pass code does not match the format, enter up to six characters next time");
                    }    
                }
                else
                {
                    JOptionPane.showMessageDialog(this, "the pass code you entered did not match your current pass code, please try again");
                }
            }
            else
            {
                JOptionPane.showMessageDialog(this, "please enter a valid pass code");
            }
        }
        
        if(ACC_NUM.equals(A2.getAccount_number()))
        {
            if((input.length()>0 && input.length()<6))
            {
                if(input.equals(A2.getPass_code()))
                {
                    String new_pass = JOptionPane.showInputDialog("enter your new passcode");
                    
                    if((new_pass.length()>0 && new_pass.length()<6))
                    {
                        String new_pass2 = JOptionPane.showInputDialog("enter your new passcode again");
                        
